


{{#if records}}
    <h3 class="text-center">Reservations History</h3>
    <div class=" bg-primary table-wrapper-scroll-y my-custom-scrollbar _history-table">
        <table class="table table-bordered m-0">
            <thead style="position: sticky; top: 0" class="bg-dark text-white">
                <tr>
                    <th>Date started</th>
                    <th>Date (to be) ended</th>
                    <th>Price</th>
                    <th>Car plate</th>
                    <th>Parking name</th>
                    <th>Add or update a review</th>
                </tr>
            </thead>
            <tbody>
                {{#each records}}
                {{!-- <p>{{this.price}}</p> --}}
                <tr class="_resv" id="{{this.r_end}}">
                    <td>{{this.r_start}}</td>
                    <td>{{this.r_end}}</td>
                    <td>{{this.price}} €</td>
                    <td>{{this.plate}}</td>
                    <td><a href="https://www.google.com/maps/dir/?api=1&origin=&destination={{this.location}}" target="_blank">
                        <i class="fa fa-map-marker"></i> {{this.name}} </a>
                        <p class="m-0 _history-note">{{this.address}}, {{this.phone}}</p>
                    </td>
                    <td>
                        <div class="">
                            <button type="button" id="myBtn-{{this.id}}" class="btn btn-lg btn-dark d-block mx-5 _btn_modal"
                                style="font-size: 18px;">+</button>
                            <div id="myModal-{{this.id}}" class="modal fade" tabindex="-1">
                                <div class="modal-dialog modal-md">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Review</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/review/{{this.id}}/{{this.id1}}" method="post">
                                                <p>Αστέρια</p>
                                                <div class="form-check form-check-inline">
                                                    <input type="radio" class="form-check-input" name="stars" id="radio1" value=1 checked>
                                                    <label class="form-check-label" for="radio1">1</label>
                                                </div>
                                                <div class="form-check form-check-inline ms-3">
                                                    <input type="radio" class="form-check-input" name="stars" id="radio2" value=2>
                                                    <label class="form-check-label" for="radio2">2</label>
                                                </div>
                                                <div class="form-check form-check-inline ms-3">
                                                    <input type="radio" class="form-check-input" name="stars" id="radio3" value=3>
                                                    <label class="form-check-label" for="radio3">3</label>
                                                </div>
                                                <div class="form-check form-check-inline ms-3">
                                                    <input type="radio" class="form-check-input" name="stars" id="radio4" value=4>
                                                    <label class="form-check-label" for="radio4">4</label>
                                                </div>
                                                <div class="form-check form-check-inline ms-3">
                                                    <input type="radio" class="form-check-input" name="stars" id="radio5" value=5>
                                                    <label class="form-check-label" for="radio5">5</label>
                                                </div>
                                                <p>Γράψτε μία κριτική</p>
                                                <textarea name="description" id="desc" cols="45" rows="5"></textarea>
                                                {{!-- <input type="range" min="1" max="5" value="3" class="slider" id="myRange"> --}}
                                                {{!-- <input type="range" value="1" min="1" max="5" oninput="this.nextElementSibling.value = this.value">
                                                <output>1</output>

                                                <input type="range" name="amountRange" min="0" max="20" value="0" oninput="this.form.amountInput.value=this.value" />
                                                <input type="number" name="amountInput" min="0" max="20" value="0" oninput="this.form.amountRange.value=this.value" /> --}}

                                                <div class="d-flex justify-content-between">
                                                    <button type="button" class="btn btn-lg btn-secondary "
                                                        data-bs-dismiss="modal">Cancel</button>
                                                    <input type="submit" id="_sbmt_btn" class="btn btn-lg btn-success" value="Add">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

{{else}}
    <p class="p-3 text-center">Oops nothing found</p>
    <p class="text-center"><a href="/home" class="text-center">Go to find a parking</a></p>
{{/if}}


<script>
    const rev = {{{reviews}}};

    document.addEventListener("DOMContentLoaded", function () {
        var bn = document.querySelectorAll("._btn_modal");
        var btns = [...bn];
        btns.forEach(btn => {
            var idd = btn.id.split("-")[1];
            //console.log(idd);
            let mdl = "";
            btn.addEventListener("click", function () {
                mdl = 'myModal-'+idd;
                var myModal = new bootstrap.Modal(document.getElementById(mdl));
                myModal.show();

                //document.querySelector('#'+mdl+' input[name="stars"]:checked').checked = false;
                if (rev[idd]) {
                    switch(rev[idd].stars) {
                        case 1:
                            document.querySelector("#"+mdl+" #radio1").checked = true;
                            break;
                        case 2:
                            document.querySelector("#"+mdl+" #radio2").checked = true;
                            break;
                        case 3:
                            document.querySelector("#"+mdl+" #radio3").checked = true;
                            break;
                        case 4:
                            document.querySelector("#"+mdl+" #radio4").checked = true;
                            break;
                        case 5:
                            document.querySelector("#"+mdl+" #radio5").checked = true;
                            break;
                        default:
                            document.querySelector("#"+mdl+" #radio3").checked = true;
                    }
                    if (rev[idd].description) {
                        document.querySelector("#"+mdl+" #desc").innerHTML = rev[idd].description;    
                    }
                    document.querySelector("#"+mdl+" #_sbmt_btn").value="Update";
                }
                
            }); 
        });
        //var btn = document.getElementById("myBtn");
        //btn.addEventListener("click", function () {
        //    var myModal = new bootstrap.Modal(document.getElementById("myModal"));
        //    myModal.show();
        //});
    });
    //dates.compare()
    let resvs = document.querySelectorAll("._resv");
    let dt = new Date();
    let today = new Date();
    resvs.forEach(el => {
        dt = new Date(el.id);
        el.className = "_resv";
        if (dt > today) {
            el.classList.add("bg-success");
        }
    }); 
    
</script>