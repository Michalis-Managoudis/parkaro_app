<script>
    document.getElementById("24/7_").addEventListener("change", function () {
        if (this.checked) {
            for (let i = 1; i <= 7; i++) {
                document.getElementById("m-f-work_hours" + i).required = false;
                document.getElementById("m-f-work_hours" + i + "b").required = false;
            }
            document.getElementById("work_hours_").hidden = true;
        }
        else {
            for (let i = 1; i <= 7; i++) {
                document.getElementById("m-f-work_hours" + i).required = true;
                document.getElementById("m-f-work_hours" + i + "b").required = true;
            }
            document.getElementById("work_hours_").hidden = false;
        }
    });

    document.getElementById("_form3").addEventListener('submit', () => {
        for (let i = 1; i <= 7; i++) {
            if (document.getElementById("m-f-" + i).checked) document.getElementById("m-f-" + i + "h").disabled = true;
        }
    });
    // map for location
    mapboxgl.accessToken = 'pk.eyJ1IjoibWlob3NtaWtlIiwiYSI6ImNsNG8xcTJndjAwdDEza2xoMjRjZnhlcnoifQ.14_-vR9YsWexqJngngO1HA';
    var map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11',
        center: [23.72756045767275, 37.98437516117204],
        zoom: 14
    });
    let marker = "";
    map.on('style.load', function () {
        marker = new mapboxgl.Marker({ draggable: true }).setLngLat([23.72756045767275, 37.98437516117204]).addTo(map);
        marker.on('dragend', function () {
            const lngLat = marker.getLngLat();
            document.getElementById("m-f-loc").value = lngLat.lng + "/" + lngLat.lat;
        });
        map.on('click', function (e) {
            const lngLat = e.lngLat;
            document.getElementById("m-f-loc").value = lngLat.lng + "/" + lngLat.lat;
            marker.setLngLat(lngLat);
        });
    });    
</script>