<form action="" method="post" id="_form3">
    <fieldset>
        <legend>Create an account</legend>
        <label for="m-f-email">Email:</label>
        <input type="email" id="m-f-email" name="email" placeholder="someone@example.com" autofocus
            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>

        <label for="m-f-pswd">Κωδικός πρόσβασης:</label>
        <input type="password" id="m-f-pswd" name="password" placeholder=""
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>

        <label for="pass2" class="label">Repeat Password</label>
        <input id="pass2" type="password" name="password2" class="input" data-type="password"
            placeholder="Repeat your password" required>

        <label for="m-f-tin">ΑΦΜ:</label>
        <input type="number" id="m-f-tin" name="tin" placeholder="" pattern="[0-9]+" required>

        <label for="m-f-cname">Επωνυμία Εταιρίας:</label>
        <input type="text" id="m-f-cname" name="company_name" placeholder="" required>

        <label for="m-f-tax_of">Δ.Ο.Υ.:</label>
        <input type="text" id="m-f-tax_of" name="tax_office" placeholder="" required>

        <label for="m-f-addr">Έδρα:</label>
        <input type="text" id="m-f-addr" name="address" placeholder="" required>

        <label for="m-f-phone">Τηλέφωνο:</label>
        <input type="tel" id="m-f-phone" name="phone" placeholder="69********" pattern="[0-9]{10}" required>
    </fieldset>
